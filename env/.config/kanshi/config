# When docked at home with external monitor
profile home {
    # main monitor
    output HDMI-A-1 {
        scale 1
        position 0,0
    }
    # laptop as secondary
    output eDP-1 {
        scale 1.3
        position 1920,0
    }
}
# When undocked (just laptop)
profile mobile {
    output eDP-1 {
        scale 1.3
        position 0,0
    }
}

